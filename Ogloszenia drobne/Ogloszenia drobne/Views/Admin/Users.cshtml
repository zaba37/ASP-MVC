@model IEnumerable<Ogloszenia_drobne.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Użytkownicy</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Akcja</th>
       
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
        <td>
            @using (Html.BeginForm("", "", FormMethod.Post))
            {
                <input type="submit" value="Delete" formaction="/Admin/DeleteUser/@item.Id" />

            }
            @using (Html.BeginForm("", "", FormMethod.Get))
            {
                <input type="submit" value="Edit" formaction="/Admin/EditUser/@item.Id" />
            }
            

        </td>
    </tr>
}

</table>
